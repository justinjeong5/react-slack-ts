{
  "compilerOptions": {
    "esModuleInterop": true,    // import * as A from 'A'  => import A from 'A'
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*":["hooks/*"],
      "@components/*":["components/*"],
      "@layouts/*":["layouts/*"],
      "@pages/*":["pages/*"],
      "@utils/*":["utils/*"],
      "@typings/*":["typings/*"]
    }
  }
}